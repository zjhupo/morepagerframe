<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_set"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_title" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:background="@drawable/btn_back" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="@color/color_white"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_position"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:background="@drawable/bg_set_frame"
        android:gravity="top|center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layout_gengxing"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="点位更新:"
                android:textColor="@color/color_black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/image_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dip"
                android:src="@drawable/ic_right" />
        </RelativeLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="10dip"
            android:background="@color/color_line" />

        <RelativeLayout
            android:id="@+id/layout_tuisong"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip" >

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="热点推送:"
                android:textColor="@color/color_black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/image_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dip"
                android:src="@drawable/ic_right" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_position"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:background="@drawable/bg_set_frame"
        android:gravity="top|center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layout_gengxing"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="使用帮助:"
                android:textColor="@color/color_black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/image_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dip"
                android:src="@drawable/ic_right" />
        </RelativeLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="10dip"
            android:background="@color/color_line" />

        <RelativeLayout
            android:id="@+id/layout_tuisong"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip" >

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="意见反馈:"
                android:textColor="@color/color_black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/image_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dip"
                android:src="@drawable/ic_right" />
        </RelativeLayout>
        <View
            android:id="@+id/view_line"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="10dip"
            android:background="@color/color_line" />

        <RelativeLayout
            android:id="@+id/layout_tuisong"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip" >

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="版本更新:"
                android:textColor="@color/color_black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/image_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dip"
                android:src="@drawable/ic_right" />
        </RelativeLayout>
    </LinearLayout>
    	<RelativeLayout
            android:id="@+id/layout_share"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:background="@drawable/bg_set_frame">
			<ImageView android:id="@+id/image_sina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sina_has"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="20dip"/>
			<TextView android:id="@+id/text_sina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_sina"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="25dip"
            android:text="已绑定"
            android:textColor="@color/color_black"
            android:textSize="18sp"/>
			
			<ImageView android:id="@+id/image_tengxun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tengxun_none"
            android:layout_marginTop="10dip"
            android:layout_centerHorizontal="true"/>
			<TextView android:id="@+id/text_sina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_sina"
            android:layout_marginTop="10dip"
            android:layout_centerHorizontal="true"
            android:text="未绑定"
            android:textColor="@color/color_black"
            android:textSize="18sp"/>
			
			<ImageView android:id="@+id/image_weixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_weixing_none"
            android:layout_marginTop="10dip"
            android:layout_marginRight="20dip"
            android:layout_alignParentRight="true"/>
			<TextView android:id="@+id/text_weixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_weixing"
            android:layout_marginTop="10dip"
            android:layout_marginRight="25dip"
             android:layout_alignParentRight="true"
            android:text="未绑定"
            android:textColor="@color/color_black"
            android:textSize="18sp"/>
        </RelativeLayout>
</LinearLayout>